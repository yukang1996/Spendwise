<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/tv_income"
        android:layout_width="192dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:text="Income"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_expense"
        app:layout_constraintStart_toStartOf="@+id/tv_expense"
        app:layout_constraintTop_toTopOf="@+id/tv_setIncome" />

    <TextView
        android:id="@+id/tv_expense"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:text="Expense"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/list"
        app:layout_constraintEnd_toEndOf="@+id/tv_balance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_setIncome" />

    <TextView
        android:id="@+id/tv_setIncome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/tv_expense"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_setExpense"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_setExpense"
        android:layout_width="192dp"
        android:layout_height="0dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="260dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/tv_balance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list"
        android:layout_width="384dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="167dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_setBalance"
        app:layout_constraintEnd_toEndOf="@+id/tv_expense"
        app:layout_constraintStart_toEndOf="@+id/tv_expense"
        app:layout_constraintTop_toTopOf="parent"></ListView>

    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:text="Balance"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_setBalance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_setExpense" />

    <TextView
        android:id="@+id/tv_setBalance"
        android:layout_width="0dp"
        android:layout_height="77dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:paddingLeft="30dp"
        android:text="TextView"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_balance"
        app:layout_constraintTop_toBottomOf="@+id/list" />


</android.support.constraint.ConstraintLayout>